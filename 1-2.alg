algoritmo "Número"
// Função :
// Autor :
// Data : 26/03/2018
// Seção de Declarações
var
n:inteiro

inicio
escreval("Digite um número:")
leia (n)

se (n % 2) = 0 entao
   escreva("O número é par ")
senao
   escreva("O número é impar ")
fimse

se (n>=0) entao
   escreva("e positivo ")
senao
   escreva("e negativo ")
fimse
fimalgoritmo
